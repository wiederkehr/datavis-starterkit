{
	"compilerOptions": {
		"baseUrl": ".",
		// Set alias for top-level folders in the src folder
		"paths": {
			"$actions/*": [
				"src/actions/*"
			],
			"$components/*": [
				"src/components/*"
			],
			"$data/*": [
				"src/data/*"
			],
			"$stores/*": [
				"src/stores/*"
			],
			"$styles/*": [
				"src/styles/*"
			],
			"$utilities/*": [
				"src/utilities/*"
			],
		}
	},
	"include": [
		"src/**/*.js", 
		"src/**/*.svelte"
	],
	"exclude": [
		"tasks/*.js"
	]
}
